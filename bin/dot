#!/usr/bin/env bash
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

bindir="$(dirname "$0")"
basedir="$(dirname "$bindir")"

# Set OS X defaults
$basedir/osx/.osx

# Install homebrew
$basedir/homebrew/install.sh 2>&1

# Upgrade homebrew
echo "› brew update"
brew update

# Install software
echo "› $basedir/script/install"
$basedir/script/install

# Symlink dotfiles
pushd $basedir &> /dev/null
find * -maxdepth 0 -type d -print0 | xargs -0 -n 1 stow
popd &> /dev/null